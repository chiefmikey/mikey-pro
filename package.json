{
  "name": "mikey-pro",
  "version": "9.0.8",
  "description": "Mikey Pro",
  "type": "module",
  "scripts": {
    "fix": "eslint --fix '**/*'",
    "ncu": "find . -name 'package.json' ! -path '*node_modules*' -exec sh -c 'cd $(dirname {}) && pwd && ncu -u' \\;",
    "npm:install": "find . -name 'package.json' ! -path '*node_modules*' -exec sh -c 'cd $(dirname {}) && pwd && npm install' \\;",
    "publish:all": "npm run publish:eslint && npm run publish:angular && npm run publish:react && npm run publish:svelte && npm run publish:vue && npm run publish:prettier && npm run publish:stylelint && npm run publish:mikey-pro",
    "publish:eslint": "cd ./configs/eslint-config && npm publish --access public",
    "publish:react": "cd ./configs/eslint-config-react && npm publish --access public",
    "publish:svelte": "cd ./configs/eslint-config-svelte && npm publish --access public",
    "publish:vue": "cd ./configs/eslint-config-vue && npm publish --access public",
    "publish:angular": "cd ./configs/eslint-config-angular && npm publish --access public",
    "publish:mikey-pro": "CWD=$(pwd) && cd ./configs && npm publish --access public && sleep 15 && cd $CWD && npm run update",
    "publish:prettier": "cd ./configs/prettier-config && npm publish --access public",
    "publish:stylelint": "cd ./configs/stylelint-config && npm publish --access public",
    "publish:theme": "cd ./theme && npm publish --access public",
    "update": "ncu -u && npm i",
    "eslint": "npx eslint --config ./eslint.config.js .",
    "test": "npx vitest run",
    "test:watch": "npx vitest",
    "test:coverage": "npx vitest run --coverage",
    "test:manual": "node tests/run-manual-tests.js",
    "test:validate": "node tests/validate-all.js",
    "ci:local": "bash scripts/ci-local.sh",
    "release:bump": "node scripts/bump-version.js",
    "release:notes": "node scripts/generate-release-notes.js"
  },
  "devDependencies": {
    "@mikey-pro/eslint-config": "^9.0.7",
    "@mikey-pro/prettier-config": "^9.0.7",
    "@mikey-pro/stylelint-config": "^9.0.7",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "svelte": "^5.43.14",
    "vitest": "^4.0.13"
  },
  "files": [
    "README.md",
    "LICENSE"
  ],
  "homepage": "https://github.com/chiefmikey/mikey-pro#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chiefmikey/mikey-pro.git"
  },
  "bugs": {
    "url": "https://github.com/chiefmikey/mikey-pro/issues"
  },
  "license": "MIT",
  "keywords": [
    "mikey-pro",
    "mikey",
    "pro",
    "style guide",
    "style-guide",
    "lint",
    "linter",
    "format",
    "formatter"
  ],
  "author": "Mikl Wolfe <wolfe@mikl.io> (https://mikl.io)",
  "funding": "https://github.com/sponsors/chiefmikey",
  "prettier": "@mikey-pro/prettier-config",
  "stylelint": {
    "extends": "@mikey-pro/stylelint-config"
  },
  "dependencies": {
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-unicorn": "^62.0.0"
  }
}
